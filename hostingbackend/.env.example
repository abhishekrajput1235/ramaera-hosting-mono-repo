# ===========================================
#            DATABASE CONFIGURATION
# ===========================================
# Database credentials (Postgres)
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name

# SQLAlchemy/Async Database URL
# Use "pgbouncer" as host for connection pooling
DATABASE_URL=postgresql+asyncpg://your_postgres_user:your_postgres_password@pgbouncer:6432/your_database_name


# ===========================================
#              AUTHENTICATION
# ===========================================
# Secret key for JWT
SECRET_KEY=your_secret_key_here

# Algorithm for JWT (default: HS256)
ALGORITHM=HS256

# Token expiry (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30


# ===========================================
#               CORS SETTINGS
# ===========================================
# Enter your frontend URLs
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]


# ===========================================
#             RAZORPAY CONFIG
# ===========================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret


# ===========================================
#             EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.yourhost.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password


# ===========================================
#               ENVIRONMENT
# ===========================================
ENVIRONMENT=development
